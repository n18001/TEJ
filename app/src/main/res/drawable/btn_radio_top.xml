<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 選択時の設定 -->
    <item android:state_checked="true"
        android:drawable="@drawable/red_smile">
        <shape android:shape="rectangle">
            <!-- 背景色 -->
            <solid android:color="@color/color22White" />
            <!-- 枠色 -->
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
            <!-- 角度 -->
            <corners
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp" />
            <!-- 余白 -->
            <padding
                android:bottom="4dp"
                android:right="4dp"
                android:left="4dp"
                android:top="4dp" />
            <!-- グラデーション -->
            <!--
            <gradient
                android:angle="90"
                android:endColor="#ffffff"
                android:startColor="#bbbbbb" />
             -->
        </shape>
    </item>


    <!-- 非選択時の設定 -->
    <item android:state_checked="false"
        android:drawable="@drawable/red_normal">
        <shape android:shape="rectangle">
            <!-- 背景色 -->
            <solid android:color="@color/colorWhite" />
            <!-- 枠色 -->
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
            <!-- 角度 -->
            <corners
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp" />
            <!-- 余白 -->
            <padding
                android:bottom="4dp"
                android:right="4dp"
                android:left="4dp"
                android:top="4dp" />
            <!-- グラデーション -->
            <!--
            <gradient
                android:angle="90"
                android:endColor="#ffffff"
                android:startColor="#bbbbbb" />
              -->
        </shape>
    </item>
</selector>