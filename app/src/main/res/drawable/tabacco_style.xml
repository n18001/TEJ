<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていない状態 -->
    <item android:state_pressed="false">
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">

            <corners android:radius="6dp" />

            <stroke
                android:width="2dp"
                android:color="@color/cloudyBlue" />

            <!-- グラデーション -->
            <!-- angle:角度、type:linear(=線形) -->
            <gradient
                android:angle="90"
                android:type="linear" />

        </shape>
    </item>

    <!-- ボタンが押された状態 -->
    <item android:state_pressed="true">
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">

            <corners android:radius="6dp" />

            <stroke
                android:width="2dp"
                android:color="@color/cloudyBlue" />

            <!-- グラデーション -->
            <!-- angle:角度、type:linear(=線形) -->
            <gradient
                android:angle="90"
                android:endColor="@color/gray"
                android:startColor="@color/gray"
                android:type="linear" />

        </shape>
    </item>

</selector>