<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="110dp"
    android:paddingLeft="200dp">

    <ImageView
        android:id="@+id/fukidashi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:src="@drawable/fukidashi2" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="210dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/fukidashi"
        android:layout_alignLeft="@+id/fukidashi"
        android:layout_alignTop="@+id/fukidashi"
        android:layout_alignEnd="@+id/fukidashi"
        android:layout_alignRight="@+id/fukidashi"
        android:layout_alignBottom="@+id/fukidashi"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:textSize="30sp" />

    <!-- ↑↑↑ original_toast_shapeを適用することで角丸を実現している -->


</RelativeLayout>