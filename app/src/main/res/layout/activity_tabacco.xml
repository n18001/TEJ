<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".Tabacco">


    <!-- no1 tabacco button -->
    <Button
        android:id="@+id/no1_tabacco"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/tabacco_style"
        android:text="@string/no1"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/no2_tabacco"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/no2_tabacco" />


    <!-- no2 tabacco button -->
    <Button
        android:id="@+id/no2_tabacco"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/tabacco_style"
        android:text="@string/no2"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline18"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="@+id/guideline21" />


    <!-- no3 tabacco button -->
    <Button
        android:id="@+id/no3_tabacco"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/tabacco_style"
        android:text="@string/no3"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/no2_tabacco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline18"
        app:layout_constraintTop_toTopOf="@+id/no2_tabacco" />


    <!-- tabacco setting button -->
    <Button
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/tabacco_style"
        android:text="@string/tabacco_setting"
        android:textColor="@color/colorBlack"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- smoking area image-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/tabacco_image_description"
        android:src="@drawable/smoking_area"
        app:layout_constraintBottom_toTopOf="@+id/guideline21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline20"
        app:layout_constraintVertical_bias="0.0" />


    <!-- no1 button title -->
    <TextView
        android:id="@+id/no1_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no1buttontitle"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/no1_tabacco"
        app:layout_constraintEnd_toEndOf="@+id/no1_tabacco"
        app:layout_constraintStart_toStartOf="@+id/no1_tabacco" />


    <!-- no2 button title -->
    <TextView
        android:id="@+id/no2_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no2buttontitle"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/no2_tabacco"
        app:layout_constraintEnd_toEndOf="@+id/no2_tabacco"
        app:layout_constraintStart_toStartOf="@+id/no2_tabacco" />


    <!-- no3 button title -->
    <TextView
        android:id="@+id/no3_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no3buttontitle"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/no3_tabacco"
        app:layout_constraintEnd_toEndOf="@+id/no3_tabacco"
        app:layout_constraintStart_toStartOf="@+id/no3_tabacco" />


    <!-- menu button -->
    <Button
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/tabacco_style"
        android:paddingLeft="17.5dp"
        android:paddingRight="17.5dp"
        android:text="@string/menu_button"
        android:textColor="@color/colorBlack"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting_button" />


    <!-- guideline vertical 50% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <!-- guideline vertical 33% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />


    <!-- guideline vertical 66% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />


    <!-- guideline horizontal 10% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <!-- guideline horizontal 75% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />


    <!-- frog attack button -->
    <Button
        android:id="@+id/frog_attack"
        android:layout_width="95dp"
        android:layout_height="135dp"
        android:background="@color/nonColor"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline20"
        app:layout_constraintVertical_bias="0.64" />


    <!-- rabbit attack button -->
    <Button
        android:id="@+id/rabbit_attack"
        android:layout_width="95dp"
        android:layout_height="190dp"
        android:background="@color/nonColor"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/guideline18"
        app:layout_constraintTop_toBottomOf="@+id/setting_button"
        app:layout_constraintVertical_bias="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>